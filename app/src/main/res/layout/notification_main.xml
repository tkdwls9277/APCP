<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="left"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/imageView_Icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_red_light"
        android:textColor="#dddddd" />
    <TextView
        android:layout_toRightOf="@+id/imageView_Icon"
        android:id="@+id/text_Noti_Title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="APCP"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_Noti_Content"
        android:layout_below="@+id/text_Noti_Title"
        android:layout_marginLeft="10dp"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미세먼지 : 좋음  온도 : 20  습도 : 59  CO : 높음"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageView_refresh"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/baseline_refresh_black_18dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>