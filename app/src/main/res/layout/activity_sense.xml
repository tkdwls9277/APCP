<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenseFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <TextView
                        android:id="@+id/textView_mainName"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="APCP"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/rounded"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">


                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/layout_temp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_temperature"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            app:srcCompat="@drawable/icon_tem"
                            />
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="15dp"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:text="온도"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_margin="15dp"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:id="@+id/text_tem"
                                android:text="수치"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                    android:orientation="horizontal"
                    android:background="#B1BCBE"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                    <LinearLayout
                        android:id="@+id/layout_humi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_humidity"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            app:srcCompat="@drawable/icon_hum" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:text="습도"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/text_wet"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:text="수치"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#B1BCBE"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/layout_dust"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_finedust"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            app:srcCompat="@drawable/icon_dust" />
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="15dp"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:text="미세먼지"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_margin="15dp"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:id="@+id/text_dust"
                                android:text="수치"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#B1BCBE"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:id="@+id/layout_CO"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image_co"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="15dp"
                            app:srcCompat="@drawable/icon_co"
                            />
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="15dp"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:text="CO"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_margin="15dp"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:id="@+id/text_co"
                                android:text="수치"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>